#!/bin/bash
set -euo pipefail

# mosh "$@" -- tmux new -As main
mosh "$@" -- sh -c 'command -v tmux >/dev/null 2>&1 || exec bash; tmux new-session -d -s hot-spares 2>/dev/null || true; tmux attach-session -t main 2>/dev/null || tmux new-session -s main "tmux move-window \; move-window -s hot-spares \; if-shell \"tmux new-session -d -s hot-spares\" \"run-shell true\" \; new-window -t hot-spares:"'
